                            <li><a class="dropdown-item" @onclick="() => {  HospitalFilterChanged(hospitalService); }">@hospitalService.ServiceName</a></li>
                        }

                    </ul>
                </div>
            </div>

            <small class="text-muted">
                Showing results for:
                <b>@DisplayQuery</b>
            </small>

            <hr />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <div class="">
                @foreach (var hospital in Hospitals)
                {
                    <HospitalCard Hospital="hospital" OnSelect="SelectHospital" OnClickMapView="OnMapViewHospital" Active="(SelectedHospital != null && hospital.Id == SelectedHospital?.Id)" />
                }
            </div>

        </div>

        <!-- RIGHT PANEL -->
        <div class="col-lg-8 col-12 p-0 @(!showMap ? "d-none d-lg-block" : "")">


            <div id="map" class="h-100 d-flex align-items-center justify-content-center bg-light">
            </div>
            @*
                if (SelectedHospital is not null)
            {

