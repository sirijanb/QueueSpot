@page "/admin/login"
@layout LoginLayout
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using app.Models
@inject NavigationManager Nav
@inject ProtectedSessionStorage Session
@inject ApplicationDbContext dbContext


<PageTitle>Login</PageTitle>


<h1 class="mb-5">Management Login</h1>
<form>
    <div class="flex justify-content-center">

        <div class="mb-3">
            <label>Email Address</label>
            <input type="text" class="form-control w-100" @bind="email" />
        </div>

        <div class="mb-3">
            <label>Password</label>
            <input type="password" class="form-control w-100" @bind="password" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        <button class="btn btn-primary w-100 mt-3" type="button" @onclick="OnLogin">Sign in</button>
    </div>

</form>

<div class="my-4">
    <a href="/admin/sign-up">Donâ€™t have an account? Register your hospital
    </a>
</div>
@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";
    private Representative representative = new Representative();

    private async Task OnLogin()
    {
        // ToDo : Authenticate through backend
        if (email == "admin" && password == "1234")
        {
            await Session.SetAsync("email", (object)email);
            await Session.SetAsync("role", (object)"admin");
            Nav.NavigateTo("/admin/dashboard");
            return;
        } else
        {
            representative = dbContext.Representative.Where(h => h.Email == email && h.Password == password).FirstOrDefault<Representative>();

            if(representative != null && representative.Id != 0)
            {
                if(representative.Status == 0)
                {
                    errorMessage = "Your registration request is still under review. Please wait until your request is approved.";
                } else
                {
                    await Session.SetAsync("email", (object)email);
                    await Session.SetAsync("role", (object)"rep");
                    Nav.NavigateTo("/admin/dashboard");
                    return;
                }
            }
        }


        errorMessage = "Invalid Email or Password!";
    }


}