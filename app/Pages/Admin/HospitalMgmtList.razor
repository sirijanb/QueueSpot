@using app.Models

<div class="row">
    @for (int i = 0;i < Hospitals.Count; i ++)
    {
        
        <div class="col">
            <a class="card mb-3" href="/admin/hospitals/edit/@Hospitals[i].Id" @onclick="OnChooseHospital">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@Hospitals[i].Photo" class="img-fluid rounded-start" alt="@Hospitals[i].Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Hospitals[i].Name</h5>
                            <p class="card-text">@Hospitals[i].Status</p>
                            <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        @if (i % 2 == 1)
        {
            <div class="w-100"></div>
        }
    }
</div>

@code {
    [Parameter]
    public List<Hospital> Hospitals { get; set; } = new List<Hospital>();


    [Parameter] public EventCallback<MouseEventArgs> OnSelect { get; set; }

    private Task OnChooseHospital(MouseEventArgs args)
    {
        
        return OnSelect.InvokeAsync(args);
    }

}
